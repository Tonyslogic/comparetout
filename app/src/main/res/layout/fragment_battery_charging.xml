<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".scenario.battery.BatteryChargingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".scenario.battery.BatteryChargingFragment">

        <TableLayout
            android:id="@+id/batteryChargingEditTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/scheduleApplicationTable" >
        </TableLayout>

        <TableLayout
            android:id="@+id/scheduleApplicationTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/scheduleDetailTable"
            app:layout_constraintTop_toBottomOf="@id/batteryChargingEditTable"
            android:visibility="invisible">
        </TableLayout>

        <TableLayout
            android:id="@+id/scheduleDetailTable"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/batteryChargingEditTable" >
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>