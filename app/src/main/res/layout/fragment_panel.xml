<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".scenario.panel.PanelFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".scenario.panel.PanelFragment">

        <TableLayout
            android:id="@+id/panelEditTable"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:padding="0dp"
            android:stretchColumns="*"
            app:layout_constraintBottom_toTopOf="@+id/pv_data_chart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >
        </TableLayout>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/pv_data_chart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/panelEditTable"
            app:layout_constraintBottom_toTopOf="@id/panelNoData"/>

        <TableLayout
            android:id="@+id/panelNoData"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toBottomOf="@id/pv_data_chart"
            app:layout_constraintBottom_toBottomOf="parent" >
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>