<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scenario.ev.EVDivertFragment">

    <TableLayout
        android:id="@+id/evDivertEditTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scheduleApplicationTable" >
    </TableLayout>

    <TableLayout
        android:id="@+id/scheduleApplicationTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/scheduleDetailScroll"
        app:layout_constraintTop_toBottomOf="@id/evDivertEditTable"
        android:visibility="invisible">
    </TableLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scheduleDetailScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        tools:context=".scenario.battery.BatteryChargingFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/evDivertEditTable">

        <TableLayout
            android:id="@+id/scheduleDetailTable"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="top" >
        </TableLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>